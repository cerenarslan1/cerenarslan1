@model List<CAproject.Models.Entities.Product>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

</head>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Roboto', sans-serif;
        line-height: 1.6;
        background-color: #f4f4f4;
        color: #333;
    }

    header {
        background-color: #333;
        color: #fff;
        padding: 20px 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        header .logo {
            font-size: 1.8em;
            font-weight: 700;
        }

        header nav ul {
            list-style: none;
            display: flex;
        }

            header nav ul li {
                margin-left: 30px;
            }

                header nav ul li a {
                    color: #fff;
                    text-decoration: none;
                    font-size: 1em;
                    transition: color 0.3s;
                }

                    header nav ul li a:hover {
                        color: pink;
                    }

    .hero {
        background: url('hero-bg.jpg') no-repeat center center/cover;
        color: #fff;
        text-align: center;
        padding: 100px 20px;
    }

        .hero .page-title {
            font-size: 2.5em;
            font-family: 'Arial', sans-serif;
            margin-bottom: 20px;
        }

        .hero h1 {
            font-size: 2.5em;
            margin-bottom: 20px;
        }

        .hero p {
            font-size: 1.2em;
            margin-bottom: 30px;
        }

    .cta-button {
        background-color: pink;
        color: #fff;
        padding: 15px 30px;
        text-decoration: none;
        font-size: 1.2em;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .cta-button:hover {
            background-color: pink;
        }

    .products {
        padding: 40px;
        background-color: #fff;
        text-align: center;
    }

        .products h2 {
            margin-bottom: 20px;
            font-size: 2em;
            color: #333;
        }

    .categories {
        margin-bottom: 20px;
    }

    .category-button {
        background-color: #333;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-size: 1em;
        margin: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .category-button:hover {
            background-color: pink;
        }

    .product-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
    }

    .product-card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        margin: 10px;
        width: 300px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
    }

        .product-card:hover {
            transform: translateY(-10px);
        }

        .product-card img {
            max-width: 100%;
            border-radius: 10px;
        }

        .product-card h3 {
            font-size: 1.5em;
            margin: 15px 0;
            color: #333;
        }

        .product-card p {
            font-size: 1.2em;
            color: pink;
        }

    .add-to-cart {
        background-color: pink;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-size: 1em;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .add-to-cart:hover {
            background-color: rgb(193, 55, 120);
        }

</style>
<body>
    <h3>Yüzükler</h3>

    <div class="container mt-5">
        <div class="row">

            @foreach (var item in Model)
            {
                @if (item.Category == "Yüzük")
                {
                    <div class="col-md-4">
                        <div class="product-grid">
                            <div class="product-card elektronik">
                                <img src=~/@item.Image alt="Yüzük Resmi">
                                <h3> @item.Ad</h3>
                                <p>@item.fiyat TL </p>
                                <button class="add-to-cart">Sepete Ekle</button>
                            </div>
                        </div>
                        <br>
                        <br>
                        <br>
                        <br>
                        <br>
                    </div>

                }

            }


        </div>
        </section>
        </main>
        <footer>
            <p>&copy; 2024. Tüm hakları saklıdır.</p>
        </footer>
        <script>
            function filterProducts(category) {
                const products = document.querySelectorAll('.product-card');
                products.forEach(product => {
                    if (category === 'all') {
                        product.style.display = 'block';
                    } else {
                        if (product.classList.contains(category)) {
                            product.style.display = 'block';
                        } else {
                            product.style.display = 'none';
                        }
                    }
                });
            }
        </script>
</body>
</html>